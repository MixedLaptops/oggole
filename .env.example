# Oggole Docker Configuration
# Copy this file to .env and update with your values

# Port Configuration
HTTP_PORT=80
HTTPS_PORT=443

# Database Configuration
# PostgreSQL connection string format: postgres://USER:PASSWORD@HOST:PORT/DATABASE?sslmode=require
# For local development without SSL, use: sslmode=disable
DATABASE_URL=postgres://oggole:your_password@postgres:5432/oggole?sslmode=require

# Domain Configuration (for SSL certificates)
DOMAIN=your-domain.com
